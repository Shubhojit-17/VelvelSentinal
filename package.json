{
  "name": "velvet-sentinel",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.24.0",
  "description": "Decentralized AI Agent Syndicate for DeFi",
  "workspaces": [
    "agents/*",
    "packages/*",
    "contracts",
    "dashboard"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rimraf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "turbo": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  }
}
